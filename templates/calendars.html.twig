{% extends 'base.html.twig' %}

{% block title %}WebDAV Calendars{% endblock %}

{% block body %}
<h3 class="page-title">WebDAV Calendars</h3>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Colour</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for calendar in calendars %}
        <tr>
            <td>{{ calendar.name }}</td>
            <td>{{ calendar.username }}</td>
            <td>{{ calendar.color }}</td>
            <td>
                <a href="{{ path('edit_calendar', {id: calendar.id}) }}">Edit</a>
                | <a href="{{ path('delete_calendar', {id: calendar.id}) }}">Delete</a>
            </td>
        </tr>
        {% endfor %}
        <tr>
            <td colspan="20">
                <a href="{{ path('new_calendar') }}" class="btn btn-secondary" style="width: 100%;">+ New Calendar</a>
            </td>
        </tr>
    </tbody>
</table>
{% endblock %}

